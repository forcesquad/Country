<%- model_class = Fsstate -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:acronym) %></th>
      <th><%= model_class.human_attribute_name(:fscountries_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @fsstates.each do |fsstate| %>
      <tr>
        <td><%= link_to fsstate.id, fsstate_path(fsstate) %></td>
        <td><%= fsstate.name %></td>
        <td><%= fsstate.acronym %></td>
        <td><%= fsstate.fscountries_id %></td>
        <td><%=l fsstate.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_fsstate_path(fsstate), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      fsstate_path(fsstate),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_fsstate_path,
            :class => 'btn btn-primary' %>
